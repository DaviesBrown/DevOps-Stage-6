# Domain Configuration
DOMAIN=your-domain.com
ACME_EMAIL=your-email@example.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this

# GitHub Configuration (for CI/CD)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=username/repo-name

# Email Alerts (for drift detection)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=admin@example.com

# Linode Configuration
LINODE_TOKEN=your_linode_api_token
LINODE_REGION=us-east

# For Linode Object Storage (Terraform state backend)
LINODE_OBJECT_STORAGE_ACCESS_KEY=your_access_key
LINODE_OBJECT_STORAGE_SECRET_KEY=your_secret_key